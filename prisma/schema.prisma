generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum NoteType {
  ON_GOING
  COMPLETED
}

enum NotePriority {
  LOW
  MEDIUM
  HIGH
}

type NoteItem {
  id    String
  title String
}

model Note {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String       @default("")
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  status    NoteType     @default(ON_GOING)
  owner     User         @relation(fields: [userId], references: [id])
  userId    String       @db.ObjectId
  tags      String[]     @default([])
  priority  NotePriority @default(LOW)
  subItems  NoteItem[]
  Folder    Folder?      @relation(fields: [folderId], references: [id])
  folderId  String?      @db.ObjectId
}

model User {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  sub            String          @unique
  username       String          @unique
  email          String          @unique
  displayName    String
  avatar         String
  Note           Note[]
  Folder         Folder[]
  UserPreference UserPreference?
}

model Folder {
  id                String           @id @default(auto()) @map("_id") @db.ObjectId
  title             String
  color             String
  icon              String
  note              Note[]
  owner             User             @relation(fields: [userId], references: [id])
  userId            String           @unique @db.ObjectId
  UserPreferences   UserPreference[] @relation(fields: [userPreferenceIds], references: [id])
  userPreferenceIds String[]         @db.ObjectId
}

model UserPreference {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  user            User     @relation(fields: [userId], references: [id])
  userId          String   @unique @db.ObjectId
  sharedFolders   Folder[] @relation(fields: [sharedFolderIds], references: [id])
  sharedFolderIds String[] @db.ObjectId
}
